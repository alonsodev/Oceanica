                        <Label FontSize="18" Text="Plomería" VerticalOptions="Center" HorizontalOptions="FillAndExpand" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding PlomeriaCommand}"></TapGestureRecognizer>
                        </Frame.GestureRecognizers>
                    </StackLayout>
                </Frame>
                <BoxView 
                    HeightRequest="1" 
                    BackgroundColor="#f2f2f2" 
